<script src="https://www.google.com/recaptcha/api.js?render=@Model"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        grecaptcha.ready(function () {
            grecaptcha.execute("@Model", { action: "register" })
                .then(function (token) {
                    document.getElementById("g-recaptcha-response").value = token;
                    console.log("reCAPTCHA Token Generated:", token); // ✅ Debugging log
                })
                .catch(function (error) {
                    console.error("reCAPTCHA error:", error);
                });
        });
    });
</script>
