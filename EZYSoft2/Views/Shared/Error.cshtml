@model EZYSoft2.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center mt-5">
    <h1 class="text-danger font-weight-bold">Error</h1>

    @if (ViewData["StatusCode"] != null)
    {
        <h2 class="text-danger font-weight-bold">Status Code: @ViewData["StatusCode"]</h2>
    }

    @if (ViewData["ErrorMessage"] != null)
    {
        <h2 class="text-danger font-weight-bold">@ViewData["ErrorMessage"]</h2>
    }
    else
    {
        <h2 class="text-danger font-weight-bold">An unexpected error occurred.</h2>
    }

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Return to Home</a>
    </p>
</div>
